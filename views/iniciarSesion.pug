doctype html
html(lang="en")
    head
        include partial/header
    body.login 
        .contenedor-formulario
            h1 Iniciar Sesion en Uptask

            if error
                each errores in error
                    p.error.alerta= error
            if exito 
                each correcto in exito
                    p.alerta.correcto= correcto.mensaje

            form#formulario.caja.caja-login(method="POST" action="/iniciar_sesion")
                .campo
                    label(for = "email") E-mail:
                    input(type="email" name="email" placeholder="Tu email")
                .campo
                    label(for = "password") Password:
                    input(type="password" name="password" placeholder="Tu Password")
                .campo.enviar 
                    input.boton(type="submit" value="Iniciar Sesion")
                .campo.acciones
                    a(href="/crear_cuentas") Crear Cuenta 
                    a(href="/reestablecer_pass") Reestablecer Contrase√±a 
    script(src="/dist/bundle.js") 